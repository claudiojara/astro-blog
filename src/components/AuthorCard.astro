---
import { Image } from "astro:assets";

const { id, data: author } = Astro.props.author;

---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
    <Image 
        transition:name={`author-${id}`}
        class="w-32 h-32 rounded-full mx-auto" 
        src={author.avatar} 
        alt="Profile picture"
    />
    <h2 class="text-center text-2xl font-semibold mt-3">{author.name}</h2>
    <p class="text-center text-gray-600 mt-1">{author.subtitle}</p>
    <div class="flex justify-center mt-5">
        <a href={`https://x.com/${author.twitter}`} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
        <a href={author.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
        <a href={author.github}  class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
    </div>
    <div class="mt-5">
        <h3 class="text-xl font-semibold">Bio</h3>
        <p class="text-gray-600 mt-2">{author.bio}</p>
        <div class="flex justify-end ">
            <a href={ `/blog/${id}`}>Leer m√°s</a>
        </div>
    </div>
</div>